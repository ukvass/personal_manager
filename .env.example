## Local SQLite (default)
DATABASE_URL=sqlite:///./tasks.db

## Postgres example (docker-compose)
# DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/personal_manager
JWT_SECRET=change-me-in-prod
JWT_ALGORITHM=HS256
JWT_EXPIRE_MIN=60

# CORS (comma-separated or JSON list supported by pydantic v2)
# Example: ["http://localhost:8000","http://127.0.0.1:8000"]
# CORS_ALLOW_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# Security headers
# Enable HSTS only behind HTTPS in production
# SECURITY_ENABLE_HSTS=true
# Override CSP if you change external CDNs
# SECURITY_CSP=default-src 'self'; script-src 'self' https://unpkg.com; style-src 'self'; img-src 'self' data:; connect-src 'self'; frame-ancestors 'none'

# CSRF (web forms)
# CSRF_SECRET=change-me-in-prod
# CSRF_COOKIE_NAME=csrftoken
# CSRF_FORM_FIELD=csrf_token
# CSRF_HEADER_NAME=X-CSRF-Token
# CSRF_TOKEN_TTL_SECONDS=3600
# CSRF_COOKIE_SECURE=false
# CSRF_COOKIE_SAMESITE=lax
# Enable CSRF enforcement (recommended)
# CSRF_ENFORCE=true
